---
import { ArrowUp, Github, GitBranch } from "lucide-react";
import { Button } from "@/components/ui/button";
---

<footer class="mt-auto bg-zinc-200 dark:bg-zinc-800 py-6">
  <div class="container mx-auto px-4 max-w-[960px]">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <Button
        id="scroll-to-top"
          variant="outline"
          size="sm"
          className="rounded-full bg-background/80 hover:bg-background"
          aria-label="Scroll to top"
        >
          <ArrowUp className="h-4 w-4 mr-2" />
          Back to top
        </Button>
      </div>
      
      <div class="flex items-center space-x-5">
        <a
          href="https://github.com/erensarac/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted-foreground hover:text-primary transition-colors"
          aria-label="GitHub"
        >
          <Github className="h-5 w-5" />
        </a>

        <a
          href="https://github.com/erensarac/getting-started-astro"
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted-foreground hover:text-primary transition-colors"
          aria-label="Source Code"
        >
          <GitBranch className="h-5 w-5" />
        </a>
      </div>
    </div>

    <div
      class="border-t border-zinc-400 dark:border-zinc-700 mt-6 pt-6 text-center text-sm text-muted-foreground"
    >
      <p>Â© {new Date().getFullYear()} All rights reserved.</p>
    </div>
  </div>
</footer>

<script>
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  }

  document.getElementById("scroll-to-top")?.addEventListener("click", scrollToTop);
</script>
